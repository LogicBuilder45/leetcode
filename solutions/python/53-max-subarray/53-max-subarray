#Maximum sum of a contiguous subarray

from typing import List


class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        best = nums[0]
        current = nums[0]
        for x in nums[1:]:
            if current + x < x:
                current = x
            else:
                current += x
            if current > best:
                best = current
        return best
